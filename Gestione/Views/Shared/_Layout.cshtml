<!DOCTYPE html>
<html>
<head>
    <style>
        body{
            overflow-x:hidden;
        }
        .zoom:hover {
            box-shadow: 0px 0px 0px #000000;
            z-index: 2;
            -webkit-transition: all 200ms ease-in;
            -webkit-transform: scale(1.2);
            transition: all 200ms ease-in;
            -ms-transform: scale(1.2);
            -moz-transition: all 200ms ease-in;
            -moz-transform: scale(1.2);
            transition: all 200ms ease-in;
            transform: scale(1.1);
        }
        .button {
            background-color: Black;
            border: none;
            color: white;
            padding: 15px 32px;
            margin-right:3%;
            margin-top:4%;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 15px;
        }
    .button span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
    }
    .button span:after {
        content: '\00bb';
        position: absolute;
        opacity: 0;
        top: 0;
        right: -20px;
        transition: 0.5s;
    }

    .button:hover span {
        padding-right: 25px;
    }

    .button:hover span:after {
        opacity: 1;
        right: 0;
    }
    #myBtn {
        display: none;
        position: fixed;
        bottom: 5%;
        left: 10%;
        z-index: 99;
        font-size: 18px;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 15px;
        border-radius: 4px;
    }
    #myBtn:hover {
      background-color: lightgray;
    }
    .img{
        padding-left:0px;
        padding-top:0px;
    }
    .row {
        padding: 2px;
        text-align: left;
        border-bottom: 2px solid black;
    }
    .image {
        margin-top: 15px;
        width: 100px;
        height: 100px;
    }
    .tre{
        padding-left:5%;
        padding-right:5%;
    }

    </style>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicazione Gestione</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top:0px;">
