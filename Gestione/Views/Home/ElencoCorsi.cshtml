@{
    ViewBag.Title = "Elenco Corsi";
}

<body>
<h1 style="padding-left:15px">@ViewBag.Title</h1>
    <div class="row">
        <h4 style="padding-left:30px">@ViewBag.Message</h4>
        <div style="float:right; padding-bottom:10px; padding-right:30px; text-align:right" class="col-md-6">
            @using(Html.BeginForm("ElencoCorsi","Home",FormMethod.Post)) {
                <label>Cerca Tra I Miei Corsi</label>
                <!-- input type="checkbox" name="mieiCorsi"  value="true" id="mieiCorsi"  />-->
                @Html.CheckBox("mieiCorsi",true)
                <input type="text" name="descrizione" id="descrizione" placeholder="Inserisci la descrizione" />
                <input type="submit" value="Cerca">
             }
        </div>
    </div>
    @if(@ViewBag.Controllo==true){
        <div class="alert alert-success" role="alert">@ViewBag.Message</div>
        }else if(@ViewBag.Controllo==false) {
             <div class="alert alert-danger" role="alert">@ViewBag.Message</div>
        }
        <div>
            <div class=" container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Descrizione</th>
                            <th scope="col">Dettaglio </th>
                        </tr>
                    </thead>
                    <tbody>
                         
                        @foreach (var corso in @ViewBag.Corsi) {
                <tr>
                    <th scope="row">  @corso.Id</th>
                    <td>  @corso.Nome</td>
                    <td>@corso.Descrizione </td>
                    <td><button class="btn" style="border-radius:7px; ">  @Html.ActionLink("DETTAGLI", "Corso", new { id = corso.Id })</button></td>
                </tr>
}
                    </tbody>
                </table>

            </div>
        </div>
        <span style="padding-left:15px">@Html.ActionLink("Aggiungi Corso","AddCorso")</span>                                                
</body>

