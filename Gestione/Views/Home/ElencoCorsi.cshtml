@section Scripts{
    <link href="~/Content/corso.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Elenco Corsi";
}

<style>

    #myElencoCorsi {
        position: fixed;
        bottom: 259px;
        left: 20px;
        z-index: 99;
        border: none;
        background-color: white;
        color: Black;
        cursor: pointer;
        padding: 15px;
        border-radius: 10px;
        font-size: 13px;
    }

    #myAddCorsi {
        position: fixed;
        bottom: 210px;
        left: 20px;
        z-index: 99;
        border: none;
        background-color: white;
        color: Black;
        cursor: pointer;
        padding: 15px;
        border-radius: 10px;
        font-size: 13px;
    }
</style>

<body>
    <h1 style="padding-left:15px">@ViewBag.Title</h1>
    <div class="row">
        <h4 style="padding-left:30px">@ViewBag.Message</h4>
        <div style="float:right; padding-bottom:10px; padding-right:30px; text-align:right" class="col-lg-6">
            @using(Html.BeginForm("ElencoCorsi","Home",FormMethod.Post)) {
                <label>Cerca Tra I Miei Corsi</label>
                <!-- input type="checkbox" name="mieiCorsi"  value="true" id="mieiCorsi"  />-->
                @Html.CheckBox("mieiCorsi",true)
                <input type="text" name="descrizione" id="descrizione" placeholder="Inserisci la descrizione" style="border-radius:4px;" />
                <input type="text" name="id" id="id" placeholder="Inserisci id" style="border-radius:4px;" />
                <input type="submit" value="Cerca">
            }
        </div>
    </div>
    @if(@ViewBag.Controllo == true) {
        <div class="alert alert-success" role="alert">@ViewBag.Message</div>
    } else if(@ViewBag.Controllo == false) {
        <div class="alert alert-danger" role="alert">@ViewBag.Message</div>
    }
    @if(@ViewBag.Corsi != null) {
        <div>
            <div class=" container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Descrizione</th>
                            <th scope="col">Dettaglio </th>
                        </tr>
                    </thead>
                    <tbody>
                         
                        @foreach (var corso in @ViewBag.Corsi) {
                <tr>
                    <th scope="row">  @corso.Id</th>
                    <td>  @corso.Nome</td>
                    <td>@corso.Descrizione </td>
                    <td ><button class="btn btn-default">@Html.ActionLink("Dettagli", "Corso", new { id = corso.Id })  </button></td>
                </tr>
}
                    </tbody>
                </table>

            </div>
        </div>
    }


    <a href="/Home/ElencoCorsi"> <button id="myElencoCorsi" style="position: fixed;" title="Elenco Corsi"><span class="glyphicon glyphicon-list"></span></button> </a>
    <a href="/Home/AddCorso"> <button id="myAddCorsi" style="position: fixed;" title="Aggiungi corso"><span class="glyphicon glyphicon-plus"></span></button> </a>
    <script>
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 0 || document.documentElement.scrollTop > 0) {
                document.getElementById("myElencoCorsi").style.display = "block";
            } else {
                document.getElementById("myElencoCorsi").style.display = "none";
            }
        }

        function scrollFunction() {
            if (document.body.scrollTop > 0 || document.documentElement.scrollTop > 0) {
                document.getElementById("myAddCorsi").style.display = "block";
            } else {
                document.getElementById("myAddCorsi").style.display = "none";
            }
        }



    </script>
</body>

