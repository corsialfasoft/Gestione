@{
        ViewBag.Title = "Lista Lezioni";
}
<h2>@ViewBag.Title</h2>
<div class="text-warning">
    <h4><b>@ViewBag.Message</b></h4>
</div>
<br />
    @ViewBag.Corso.Descrizione
    @ViewBag.Corso.Id
<br />
<div class="container">
    <ol class="list-group" start="1">
        @foreach(var lezioni in ViewBag.Lezioni) {
            <li class="list-group-item">
                <span>
                    @lezioni.Nome
                </span>
            </li>
        }
    </ol>
    <br />
    <span> @Html.ActionLink("Iscriviti","Iscrizione",new { idCorso = ViewBag.Corso.Id });</span>
    <span> @Html.ActionLink("+ Lezione","AddLezione",new { idCorso = ViewBag.Corso.Id });</span>
</div>