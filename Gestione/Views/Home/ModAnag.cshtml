@{
    ViewBag.Title = "Modifica Dati Anagrafiche";
}
<h2>@ViewBag.Title</h2>
<div class="text-warning">
    <p>@ViewBag.Message</p>
</div>

@using(Html.BeginForm("ModificaCv","Home",FormMethod.Post)) {
    <div id="anag">
        <fieldset>
            <legend>Dati Anagrafici:</legend>
            <div class="row">
                <div class="col-md-2">
                    Nome:*
                </div>
                <div class="col-md-2">
                    <input id="nome" name="nome" type="text" value="@ViewBag.CV.Nome" required />
                </div>
                <div class="col-md-2">
                    Cognome:*
                </div>
                <div class="col-md-2">
                    <input id="cognome" name="cognome" type="text" value="@ViewBag.CV.Cognome"  required/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    Età:*
                </div>
                <div class="col-md-2">
                    <input id="eta" name="eta" type="number" value="@ViewBag.CV.Eta" required />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    E-mail:*
                </div>
                <div class="col-md-2">
                    <input id="email" name="email" type="text" value="@ViewBag.CV.Email" required />
                </div>
                <div class="col-md-2">
                    Residenza:*
                </div>
                <div class="col-md-2">
                    <input id="residenza" name="residenza" type="text" value="@ViewBag.CV.Residenza" required />
                </div>
                <div class="col-md-2">
                    Telefono:*
                </div>
                <div class="col-md-2">
                    <input id="telefono" name="telefono" type="text" value="@ViewBag.CV.Telefono" required />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <a class="btn btn-default" href="/Home/DettCv/?id=@ViewBag.CV.Matricola" type="submit" value="Salva Modifiche">Torna al Dettaglio</a>
                    <input class="btn btn-default" type="submit" value="Salva Modifiche">
                </div>
            </div>
        </fieldset>
    </div>
}